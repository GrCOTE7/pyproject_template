(security_headers) {
  header {
    X-Content-Type-Options nosniff
    X-Frame-Options DENY
    Referrer-Policy no-referrer-when-downgrade
    Permissions-Policy "geolocation=()"
  }
}

cote7.com {
  import security_headers
  handle /admin* {
    reverse_proxy template_django:8001
  }
  handle /static* {
    reverse_proxy template_django:8001
  }
  handle {
    reverse_proxy template_frontend:80
  }
}

www.cote7.com {
  import security_headers
  handle /admin* {
    reverse_proxy template_django:8001
  }
  handle /static* {
    reverse_proxy template_django:8001
  }
  handle {
    reverse_proxy template_frontend:80
  }
}
