# ===========================
# Pyproject Template - Configuration Template
# ===========================
# Copier ce fichier en .env et remplir avec vos valeurs
# Ne jamais committer le fichier .env (inclus dans .gitignore)

# ===========================
# ENVIRONMENT
# ===========================
ENV=dev
# Options: dev, staging, prod

# ===========================
# FASTAPI BACKEND
# ===========================
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000
FASTAPI_RELOAD=True
# CORS - Origines autorisées (séparées par des virgules)
FASTAPI_CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173

# ===========================
# DJANGO BACKEND
# ===========================
DJANGO_SECRET_KEY=change-this-to-a-random-50-character-string
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,django,core
DJANGO_PORT=8001

# CORS - Origines autorisées (séparées par des virgules)
DJANGO_CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Database
DJANGO_DB_ENGINE=django.db.backends.sqlite3
DJANGO_DB_NAME=db.sqlite3
# Pour PostgreSQL (décommenter et configurer):
# DJANGO_DB_ENGINE=django.db.backends.postgresql
# DJANGO_DB_NAME=matrice_db
# DJANGO_DB_USER=postgres
# DJANGO_DB_PASSWORD=your_password
# DJANGO_DB_HOST=db
# DJANGO_DB_PORT=5432

# ===========================
# FRONTEND
# ===========================
VITE_BACKEND_URL=http://localhost:8000
VITE_DJANGO_URL=http://localhost:8001

# ===========================
# SECURITY
# ===========================
# JWT (à configurer quand implémenté)
# JWT_SECRET_KEY=your-jwt-secret-key-min-32-chars
# JWT_ALGORITHM=HS256
# JWT_EXPIRATION_MINUTES=30

# ===========================
# RATE LIMITING (à configurer)
# ===========================
# RATE_LIMIT_PER_MINUTE=60

# ===========================
# MONITORING & LOGGING
# ===========================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
